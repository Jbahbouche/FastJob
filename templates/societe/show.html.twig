{% extends 'base.html.twig' %}

{% block title %}{{ societe.nom }}{% endblock %}

{% block body %}

<div class="form-signin2 card shadow">
    <div class='d-flex my-3 align-items-center'>
        <img src="{{asset("assets/img/logo/"~ societe.logo)}}" class="logo">
        <p class="h2  ms-3">{{ societe.nom }}</p>
        <a href="{{ path('app_societe_edit', {'id': societe.id}) }}" class="ms-auto"><img src="{{ asset('assets/img/modofy.png') }}" class="ms-auto icon2" alt="icone modifier"></a>
    </div>
    <div class='card mb-3'>
        <div>
            <div class="d-flex justify-content-around">
                <div class="col-6">
                    <h5 class='ps-3'>Représentant</h5>
                    <p class="ps-4"> {{ societe.representantnom }} {{ societe.representantprenom }}</p>
                </div>
                <div class="col-6">
                    <h5 class=''>Site web :</h5>
                    <a href="http://{{ societe.site}}" class="ps-4" style="text-decoration: none;" target="_blank"> {{ societe.site }}</a>
                </div>
            </div>
            <div class="d-flex justify-content-around">
                <div class="col-6">
                    <h5 class='ps-3'>Téléphone :</h5>
                    <p class="ps-4"> {{ societe.telephone }}</p>
                </div>
                <div class="col-6">
                    <h5 class=''>Adresse :</h5>
                    <p class="ps-4" >{{societe.adresse}}</p>
                </div>
            </div>
        </div>
    </div>
    <hr class="mx-auto w-50 my-2">
    <div class="d-flex justify-content-between align-items-center">
        <h5 class='mt-3 mb-5'>Annonces déposées</h5>
        <a href="{{ path('app_mes_annonces') }}" class="ms-auto btn btn-custom text-white">Voir toutes les offres</a>
    </div>
    <div class="d-flex flex-wrap mb-4">
        {% for annonce in annonces %}
            <div class="card mx-1 shadow col-sm-3 col-10 mb-2"  >
                <h5 class="ms-1 mt-2 text-custom">{{ annonce.titre }}</h6>
                <p class="ms-3 mb-0">{{ annonce.createdAt ? annonce.createdAt|date('d/m/Y') : '' }}</p>
                <p class="ms-3 mb-0">{{ annonce.departement }}</p>
                <p class="ms-3 mb-0">{{ annonce.ville }}</p>
                <p class="ms-3 mb-2">Postulants: X</p>
                <a href="{{ path('app_annonce_show', {'id': annonce.id}) }}" class="ms-2 mb-2 btn btn-custom text-white text-center" style="">Voir l'offre</a>
            </div>
        {% endfor %}
    </div>
    <hr class="mx-auto w-50 my-2">
    <h5 class='mt-3'>L'entreprise :</h5>
    <p class="ms-3 pt-3" >{{societe.description }}</p>
    <hr class="mx-auto w-50 my-2">
</div>

{% endblock %}
