{% extends 'base.html.twig' %}

{% block title %}Annonce index{% endblock %}

{% block body %}
<main class="form-signin card shadow">
    <div class="text-center mb-2">
        <h2>Paramètres</h2>
    </div>
    <hr class="mx-auto w-50 my-4">
    <h3 class="h3 mb-3 font-weight-normal">Compte:  </h1>
    <form method="post" action="{{ path('app_user_delete', {'id': user.id}) }}" onsubmit="return confirm('Etes vous sûr de vouloir supprimer votre compte?');">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
        <button class="ms-5 btn btn-danger">Supprimer mon compte</button>
    </form>

</main>
{% endblock %}